<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD9BE8"
    tools:context=".WomenHealth">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="serif"
        android:text="WOMEN HEALTH TRACKER"
        android:textAlignment="center"
        android:textColor="#090101"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="HOW CAN I HELP YOU?"
        android:textAlignment="center"
        android:textColor="#090101"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cd1"
        android:layout_width="349dp"
        android:layout_height="152dp"
        android:backgroundTint="#E15B89"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208" >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="139dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_18"/>

        <TextView
            android:layout_width="176dp"
            android:layout_height="114dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="5dp"
            android:text="TRACK MY CYCLE"
            android:textSize="30dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#F3EEEE"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd3"
        android:layout_width="349dp"
        android:layout_height="152dp"
        android:backgroundTint="#E1AABD"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="139dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_20" />

        <TextView
            android:layout_width="176dp"
            android:layout_height="114dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="38dp"
            android:fontFamily="serif"
            android:text="EXERCISES"
            android:textAlignment="center"
            android:textColor="#231414"
            android:textSize="30dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd2"
        android:layout_width="349dp"
        android:layout_height="152dp"
        android:backgroundTint="#175C81"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="139dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_19" />

        <TextView
            android:layout_width="187dp"
            android:layout_height="114dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="28dp"
            android:fontFamily="serif"
            android:text="MONITOR MY FERTILITY"
            android:textAlignment="center"
            android:textColor="#F3EEEE"
            android:textSize="30dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>